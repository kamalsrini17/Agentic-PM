# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here

# GPT-5 Configuration (when available)
GPT5_ENABLED=false
GPT5_API_KEY=your_gpt5_api_key_here  # Use same as OPENAI_API_KEY if same provider

# Anthropic Claude Configuration
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Application Configuration
NODE_ENV=development

# Logging Configuration
LOG_LEVEL=info  # debug, info, warn, error

# Rate Limiting Configuration
RATE_LIMIT_ENABLED=true
MAX_REQUESTS_PER_MINUTE=60

# File Storage Configuration
DOCUMENTS_OUTPUT_DIR=./documents
PROTOTYPES_OUTPUT_DIR=./prototypes

# Multi-Model AI Configuration
DEFAULT_EVALUATION_MODELS=gpt-4,claude-3-sonnet
EVALUATION_TIMEOUT=60000  # 60 seconds

# Cost Tracking (optional)
TRACK_API_COSTS=true
MONTHLY_BUDGET_LIMIT=100  # USD